<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.apexmemory.caddy</string>

	<key>ProgramArguments</key>
	<array>
		<string>/opt/homebrew/bin/caddy</string>
		<string>run</string>
		<string>--config</string>
		<string>/opt/apexmemory/deploy/Caddyfile</string>
	</array>

	<key>RunAtLoad</key>
	<true/>

	<key>KeepAlive</key>
	<true/>

	<key>StandardOutPath</key>
	<string>/opt/apexmemory-data/logs/caddy-stdout.log</string>

	<key>StandardErrorPath</key>
	<string>/opt/apexmemory-data/logs/caddy-stderr.log</string>

	<key>WorkingDirectory</key>
	<string>/opt/apexmemory</string>
</dict>
</plist>
